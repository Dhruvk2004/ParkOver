<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- Success Icon Container -->
    <FrameLayout
        android:id="@+id/success_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/success_circle_background"
        app:layout_constraintBottom_toTopOf="@id/tv_success_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_booking_filled"
            app:tint="@color/white" />

    </FrameLayout>

    <!-- Success Title -->
    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/jost_bold"
        android:text="Booking Successful!"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_success_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/success_container" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/jost_regular"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Your parking spot has been booked successfully. Show the QR code at the parking entrance."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/card_booking_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_success_title" />

    <!-- Booking Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_booking_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/nav_background_purple"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_view_booking"
        app:layout_constraintTop_toBottomOf="@id/tv_success_message">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- QR Code -->
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:padding="8dp" />

            <!-- Booking ID -->
            <TextView
                android:id="@+id/tv_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="Booking ID: #PK123456"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <!-- Parking Name -->
            <TextView
                android:id="@+id/tv_parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/jost_semibold"
                android:text="Parking Lot Name"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Spot Info -->
            <TextView
                android:id="@+id/tv_spot_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/jost_regular"
                android:text="1st Floor â€¢ Spot A05"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- Time Info -->
            <TextView
                android:id="@+id/tv_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/jost_regular"
                android:text="11:00 AM - 3:00 PM"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- View Booking Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_booking"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/mainpurple"
        android:fontFamily="@font/jost_semibold"
        android:text="View My Bookings"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/btn_back_home" />

    <!-- Back to Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_home"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="140dp"
        android:fontFamily="@font/jost_medium"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textColor="@color/mainpurple"
        app:cornerRadius="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/mainpurple"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
