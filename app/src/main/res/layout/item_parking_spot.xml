<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingVertical="4dp">

    <!-- Left Spot Container -->
    <FrameLayout
        android:id="@+id/left_spot"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_marginEnd="4dp">

        <!-- Spot Background (only for available) -->
        <View
            android:id="@+id/bg_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/parking_spot_border" />

        <!-- Car Image (for occupied spots) -->
        <ImageView
            android:id="@+id/iv_car_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car_top_view"
            android:visibility="gone" />

        <!-- Spot Label -->
        <TextView
            android:id="@+id/tv_spot_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/spot_label_background"
            android:fontFamily="@font/jost_medium"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="A01"
            android:textColor="@color/text_primary"
            android:textSize="13sp" />

    </FrameLayout>

    <!-- Center Divider Line -->
    <View
        android:id="@+id/center_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/button_border" />

    <!-- Right Spot Container -->
    <FrameLayout
        android:id="@+id/right_spot"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_marginStart="4dp">

        <!-- Spot Background (only for available) -->
        <View
            android:id="@+id/bg_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/parking_spot_border" />

        <!-- Car Image (for occupied spots) -->
        <ImageView
            android:id="@+id/iv_car_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car_top_view"
            android:visibility="gone" />

        <!-- Spot Label -->
        <TextView
            android:id="@+id/tv_spot_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/spot_label_background"
            android:fontFamily="@font/jost_medium"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="A02"
            android:textColor="@color/text_primary"
            android:textSize="13sp" />

    </FrameLayout>

</LinearLayout>
