<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav_card"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="32dp"
    app:cardBackgroundColor="@color/nav_background_purple"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <!-- Home Tab -->
        <FrameLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/bg_home"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_selected_bg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ic_home"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_outline" />
        </FrameLayout>

        <!-- Saved Tab -->
        <FrameLayout
            android:id="@+id/nav_saved"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/bg_saved"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_selected_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ic_saved"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_saved_outline" />
        </FrameLayout>

        <!-- Booking Tab -->
        <FrameLayout
            android:id="@+id/nav_booking"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/bg_booking"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_selected_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ic_booking"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_booking_outline" />
        </FrameLayout>

        <!-- Profile Tab -->
        <FrameLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <View
                android:id="@+id/bg_profile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_selected_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_outline" />
        </FrameLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
